@charset "utf-8";
.view {
	position: relative;
    width: 100%;
    -webkit-margin-after-collapse: separate;
    -webkit-margin-before-collapse: discard;
}
.view-ul-li {
	position: relative;
    border-bottom: 2px #f0f0f0 solid;
    width: 100%;
    margin: 0 auto;
    -webkit-transition: all 1s ease-in-out;
}
.article_link{
    display: block;
    position: relative;
    font-size: 0;
    padding: 3%;
    width: 94%;
    -webkit-tap-highlight-color: rgba(0,0,0,.1);
}

/*常规内容*/

.item-description {
    position: relative;
    width: 63.5%;
    display: inline-block;
    vertical-align: middle;
}
.item-picture{
    position: relative;
    display: inline-block;
    vertical-align: middle;
    width: 36.5%;
}
.item-picture img {
    width: 100%;
	height: 2.13rem;
}
.description-title {
	width: 100%;
	height: auto;
	overflow: hidden;
    float: left;
}

.description-info {
	float: left;
	width: 100%;
	padding-top: 0.67rem;
}

.description-title-text{
	color: #333333;
    width: 94%;
    padding-right: 6%;
	text-overflow: -o-ellipsis-lastline;  
    overflow: hidden;  
    text-overflow: ellipsis;  
    display: -webkit-box;  
    -webkit-line-clamp: 2;  
    -webkit-box-orient: vertical;  
}
.view-ul-li a:visited .description-title-text{
	color: #8C8C8C;
}
.view-ul-li a:visited .info-source>span{
	color: #8C8C8C;
}
.view-ul-li a:visited .info-look-count>p{
	color: #8C8C8C;
}

.view-ul-li a:visited .promotion-title>p{
	color: #8C8C8C;
}
.view-ul-li a:visited .push-title>p{
	color: #8C8C8C;
}
.view-ul-li a:visited .info-look-count-ts>p{
	color: #8C8C8C;
}
.info-source,
.info-look-count {
	display: table-cell;
	vertical-align: middle;
	margin-right: 6%;
}
.info-source span{
	margin-right: 0.15rem;
	color: #8C8C8C !important;
}

.info-look-count p,
.info-look-count img {
	display: inline-block;
	color: #8C8C8C !important;
}

.info-look-count img {
	width: 0.32rem;
	height: 0.32rem;
	margin-right: 0.1rem;
}

.play-tag {
    position: absolute;
    left: 50%;
    background: url(../images/play-tag.png) no-repeat;
    background-size: contain;
    width: 0.933333rem;
    height: 0.933333rem;
}
[data-dpr="1"] .play-tag {
	top: 22px !important;
	margin-left: -15px;
}
[data-dpr="2"] .play-tag {
	top: 40px !important;
	margin-left: -30px;
}
[data-dpr="3"] .play-tag {
    top: 80px !important;
    margin-left: -50px;
}


.play-tag-hz {
    position: absolute;
    left: 50%;
    background: url(../images/play-tag.png) no-repeat;
    background-size: contain;
    width: 0.933333rem;
    height: 0.933333rem;
}
[data-dpr="1"] .play-tag-hz {
	top: 100px !important;
	margin-left: -27px;
}
[data-dpr="2"] .play-tag-hz {
	top: 178px !important;
	margin-left: -45px;
}
[data-dpr="3"] .play-tag-hz {
	top: 312px !important;
	margin-left: -82px;
}

/*推广内容*/

.promotion-title {
	float: left;
	top: 0.27rem;
	width: 100%;
	margin-bottom: 0.28rem;
}

.promotion-title p {
	float: left;
	color: #333333;
	width: 100%;
	/*overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;*/
}

.promotion-picture img {
	width: 100%;
	height: 3.4666rem;
}

.promotion-info i {
	display: inline-block;
	background: #c394fd;
	width: 0.8rem;
	border-radius: 5px;
	color: #FFFFFF;
	text-align: center;
	margin-top: 0.2rem;
	font-style: normal;
}


/*推送内容*/

.push-title {
    float: left;
    top: 0.27rem;
    width: 100%;
    margin-bottom: 0.28rem;
}

.push-title p {
	color: #333333;
	width: 100%;
	/*overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;*/
}
.push-picture{
	position: relative;
}
.push-picture img {
	width: 100%;
	height: 3.444rem;
}

.push-info {
	position: relative;
    display: table;
    vertical-align: middle;
    width: 100%;
    margin-top: 0.2rem;
}
.push-info-text{
	display: table-cell;
	vertical-align: middle;
    width: 75%;
}
.push-info i {
	display: inline-block;
	vertical-align: middle;
	width: 0.8rem;
	border-radius: 5px;
	color: #FFFFFF;
	text-align: center;
	font-style: normal;
}
.info-look-count-ts{
	display: table-cell;
    vertical-align: middle;
    width: 25%;
    text-align: right;
}
.info-look-count-ts img {
    width: 0.32rem;
    height: 0.32rem;
    margin-right: 0.1rem;
    display: inline-block;
}
.info-look-count-ts p {
    display: inline-block;
}
/*视频*/
.sp {
	background: #fbb939;
}
/*测评*/
.cp {
	background: #ec2929;
}
/*新闻*/
.xw {
    background: #7CE58E;
}
/*专栏*/
.zl {
    background: #CB9C93;
}

